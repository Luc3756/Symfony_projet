{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails des produits</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }} €</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ product.stock }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ product.status.toString() }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-warning">Modifier</a>
        </div>

        <div class="mt-4">
            {{ include('admin_product/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
