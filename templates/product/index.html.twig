{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-6">
                <form action="{{ path('product_search') }}" method="get" data-turbo-action="replace" data-turbo-frame="product-list">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Rechercher un produit" value="{{ app.request.query.get('q') }}">
                        <button class="btn btn-primary" type="submit">Rechercher</button>
                    </div>
                </form>
            </div>
        </div>

        <div id="product-list" data-turbo-frame="product-list">
            <div class="row">
                {% for product in pagination %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>

                                {% if product.image is not empty %}
                                    <div class="product-images mb-2">
                                        {% for image in product.image %}
                                            <img src="{{ asset('image/' ~ image.url) }}" alt="Image de {{ product.name }}" class="img-fluid" style="max-width: 100%; height: auto;">
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <p>Aucune image disponible</p>
                                {% endif %}

                                <p class="card-text">{{ product.description }}</p>
                                <p class="card-text">Prix : {{ product.price }} €</p>
                                <p class="card-text">Stock : {{ product.stock }} unités</p>
                                <p class="card-text">Statut : {{ product.status.toString() }}</p>

                                {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                                    {% if product.stock > 0 %}
                                        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                                    {% else %}
                                        <button class="btn btn-secondary" disabled>Indisponible</button>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <div class="pagination">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
