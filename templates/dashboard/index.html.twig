{% extends 'base.html.twig' %}

{% block body %}
    <h1>Les 5 dernières commandes</h1>

    <table>
        <thead>
            <tr>
                <th>Référence</th>
                <th>Date</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.reference }}</td>
                    <td>{{ order.createAT|date('Y-m-d') }}</td> <!-- Format de la date -->
                    <td>{{ order.status.toString() }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Nombre total de produits par catégorie</h1>

    <table>
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Nombre de produits</th>
            </tr>
        </thead>
        <tbody>
            {% for category in productCounts %}
                <tr>
                    <td>{{ category.categoryName }}</td>
                    <td>{{ category.productCount }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Pourcentage des produits par statut</h1>

    <table>
        <thead>
            <tr>
                <th>Statut</th>
                <th>Pourcentage</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Disponible</td>
                <td>{{ productStatusPercentages['Disponible'] }}%</td>
            </tr>
            <tr>
                <td>En rupture</td>
                <td>{{ productStatusPercentages['En_rupture'] }}%</td>
            </tr>
            <tr>
                <td>Précommande</td>
                <td>{{ productStatusPercentages['Précommande'] }}%</td>
            </tr>
        </tbody>
    </table>

    <h1>Montant total des ventes réalisées par mois</h1>

    <table>
        <thead>
            <tr>
                <th>Année</th>
                <th>Mois</th>
                <th>Ventes totales (€)</th>
            </tr>
        </thead>
        <tbody>
            {% for sale in salesByMonth %}
                <tr>
                    <td>{{ sale.year }}</td>
                    <td>{{ sale.month }}</td>
                    <td>{{ sale.totalSales|number_format(2, '.', ',') }} €</td> <!-- Format du montant -->
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
